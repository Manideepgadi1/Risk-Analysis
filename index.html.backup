<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Riskometer - Advanced Risk Analysis</title>
    <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.0/dist/chart.umd.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chartjs-adapter-date-fns@3.0.0/dist/chartjs-adapter-date-fns.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chartjs-plugin-zoom@2.0.1/dist/chartjs-plugin-zoom.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chartjs-plugin-annotation@3.0.1/dist/chartjs-plugin-annotation.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/hammerjs@2.0.8"></script>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            padding: 20px;
        }

        .container {
            max-width: 1600px;
            margin: 0 auto;
        }

        h1 {
            text-align: center;
            color: white;
            margin-bottom: 30px;
            font-size: 2.8em;
            text-shadow: 2px 2px 4px rgba(0,0,0,0.3);
            animation: fadeIn 0.8s ease-in;
        }

        @keyframes fadeIn {
            from { opacity: 0; transform: translateY(-20px); }
            to { opacity: 1; transform: translateY(0); }
        }

        .controls {
            background: white;
            padding: 30px;
            border-radius: 20px;
            box-shadow: 0 15px 40px rgba(0,0,0,0.25);
            margin-bottom: 30px;
            animation: slideUp 0.6s ease-out;
        }

        @keyframes slideUp {
            from { opacity: 0; transform: translateY(30px); }
            to { opacity: 1; transform: translateY(0); }
        }

        .control-row {
            display: grid;
            grid-template-columns: 2fr 1fr auto;
            gap: 20px;
            margin-bottom: 20px;
            align-items: end;
        }

        .form-group {
            display: flex;
            flex-direction: column;
        }

        label {
            font-weight: 600;
            margin-bottom: 10px;
            color: #333;
            font-size: 14px;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

        select, input {
            padding: 14px;
            border: 2px solid #e0e0e0;
            border-radius: 10px;
            font-size: 15px;
            transition: all 0.3s;
            background: white;
        }

        select:focus, input:focus {
            outline: none;
            border-color: #667eea;
            box-shadow: 0 0 0 4px rgba(102, 126, 234, 0.15);
        }

        .time-periods {
            display: flex;
            gap: 10px;
            flex-wrap: wrap;
            padding: 10px 0;
        }

        .time-period-btn {
            padding: 12px 24px;
            background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
            color: #333;
            border: 2px solid transparent;
            border-radius: 10px;
            cursor: pointer;
            font-weight: 600;
            font-size: 14px;
            transition: all 0.3s;
            min-width: 70px;
        }

        .time-period-btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(0,0,0,0.15);
        }

        .time-period-btn.active {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            border-color: #667eea;
            box-shadow: 0 5px 20px rgba(102, 126, 234, 0.4);
        }

        .analyze-btn {
            padding: 14px 40px;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            border: none;
            border-radius: 12px;
            cursor: pointer;
            font-weight: 700;
            font-size: 16px;
            transition: all 0.3s;
            box-shadow: 0 5px 15px rgba(102, 126, 234, 0.3);
        }

        .analyze-btn:hover {
            transform: translateY(-3px);
            box-shadow: 0 8px 25px rgba(102, 126, 234, 0.5);
        }

        .analyze-btn:active {
            transform: translateY(0);
        }

        .stats-panel {
            background: white;
            padding: 25px;
            border-radius: 20px;
            box-shadow: 0 15px 40px rgba(0,0,0,0.25);
            margin-bottom: 30px;
            display: none;
            animation: slideUp 0.6s ease-out;
        }

        .stats-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
            gap: 20px;
        }

        .stat-card {
            background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
            padding: 25px;
            border-radius: 15px;
            text-align: center;
            transition: transform 0.3s, box-shadow 0.3s;
        }

        .stat-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 25px rgba(0,0,0,0.15);
        }

        .stat-label {
            font-size: 12px;
            color: #666;
            text-transform: uppercase;
            font-weight: 700;
            margin-bottom: 10px;
            letter-spacing: 1px;
        }

        .stat-value {
            font-size: 28px;
            font-weight: bold;
            color: #333;
            margin-bottom: 8px;
        }

        .risk-indicator {
            display: inline-block;
            padding: 6px 18px;
            border-radius: 20px;
            font-size: 13px;
            font-weight: 700;
            margin-top: 8px;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

        .risk-negative { background: #4ade80; color: white; }
        .risk-neutral { background: #fbbf24; color: white; }
        .risk-positive { background: #f87171; color: white; }

        .chart-container {
            background: white;
            padding: 30px;
            border-radius: 20px;
            box-shadow: 0 15px 40px rgba(0,0,0,0.25);
            margin-bottom: 30px;
            position: relative;
            animation: slideUp 0.6s ease-out;
        }

        .chart-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 25px;
            flex-wrap: wrap;
            gap: 15px;
        }

        .chart-title {
            font-size: 22px;
            font-weight: 700;
            color: #333;
        }

        .chart-controls {
            display: flex;
            gap: 10px;
        }

        .chart-btn {
            padding: 8px 16px;
            background: #f5f7fa;
            border: 2px solid #e0e0e0;
            border-radius: 8px;
            cursor: pointer;
            font-size: 13px;
            font-weight: 600;
            transition: all 0.3s;
            color: #333;
        }

        .chart-btn:hover {
            background: #667eea;
            color: white;
            border-color: #667eea;
        }

        .chart-wrapper {
            position: relative;
            height: 550px;
        }

        .zoom-info {
            position: absolute;
            top: 10px;
            right: 10px;
            background: rgba(102, 126, 234, 0.9);
            color: white;
            padding: 8px 16px;
            border-radius: 8px;
            font-size: 12px;
            font-weight: 600;
            opacity: 0;
            transition: opacity 0.3s;
            pointer-events: none;
            z-index: 10;
        }

        .zoom-info.active {
            opacity: 1;
        }

        .loading {
            text-align: center;
            padding: 60px;
            color: #666;
            font-size: 18px;
        }

        .loading::after {
            content: '...';
            animation: dots 1.5s steps(4, end) infinite;
        }

        @keyframes dots {
            0%, 20% { content: '.'; }
            40% { content: '..'; }
            60%, 100% { content: '...'; }
        }

        .error {
            background: #fee;
            border: 2px solid #fcc;
            color: #c33;
            padding: 18px;
            border-radius: 12px;
            margin-bottom: 20px;
            animation: shake 0.5s;
        }

        @keyframes shake {
            0%, 100% { transform: translateX(0); }
            25% { transform: translateX(-10px); }
            75% { transform: translateX(10px); }
        }

        .legend-custom {
            display: flex;
            justify-content: center;
            gap: 30px;
            margin-top: 15px;
            flex-wrap: wrap;
        }

        .legend-item {
            display: flex;
            align-items: center;
            gap: 8px;
            font-size: 13px;
            font-weight: 600;
        }

        .legend-color {
            width: 20px;
            height: 20px;
            border-radius: 4px;
        }

        @media (max-width: 1024px) {
            .control-row {
                grid-template-columns: 1fr;
            }

            h1 {
                font-size: 2em;
            }

            .chart-wrapper {
                height: 450px;
            }
        }

        @media (max-width: 768px) {
            .time-periods {
                justify-content: center;
            }

            .chart-header {
                flex-direction: column;
                align-items: flex-start;
            }
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>ðŸ“Š Riskometer - Advanced Risk Analysis</h1>

        <div class="controls">
            <div class="control-row">
                <div class="form-group">
                    <label for="indexSelect">Select Index:</label>
                    <select id="indexSelect">
                        <option value="">Loading indices...</option>
                    </select>
                </div>

                <div class="form-group">
                    <label for="windowSize">Rolling Window (days):</label>
                    <input type="number" id="windowSize" value="30" min="5" max="252">
                </div>

                <div class="form-group">
                    <label>&nbsp;</label>
                    <button class="analyze-btn" onclick="loadRiskometer()">Analyze Risk</button>
                </div>
            </div>

            <div class="form-group">
                <label>Time Period:</label>
                <div class="time-periods">
                    <button class="time-period-btn" data-years="1">1Y</button>
                    <button class="time-period-btn" data-years="2">2Y</button>
                    <button class="time-period-btn active" data-years="3">3Y</button>
                    <button class="time-period-btn" data-years="4">4Y</button>
                    <button class="time-period-btn" data-years="5">5Y</button>
                    <button class="time-period-btn" data-years="6">6Y</button>
                    <button class="time-period-btn" data-years="7">7Y</button>
                    <button class="time-period-btn" data-years="8">8Y</button>
                    <button class="time-period-btn" data-years="9">9Y</button>
                    <button class="time-period-btn" data-years="10">10Y</button>
                    <button class="time-period-btn" data-years="all">All</button>
                </div>
            </div>
        </div>

        <div id="errorMessage" class="error" style="display: none;"></div>

        <div id="statsPanel" class="stats-panel">
            <div class="stats-grid">
                <div class="stat-card">
                    <div class="stat-label">Current Price</div>
                    <div class="stat-value" id="currentPrice">-</div>
                </div>
                <div class="stat-card">
                    <div class="stat-label">Risk Score</div>
                    <div class="stat-value" id="riskScore">-</div>
                    <div id="riskIndicator" class="risk-indicator">-</div>
                </div>
                <div class="stat-card">
                    <div class="stat-label">Current Volatility</div>
                    <div class="stat-value" id="currentVolatility">-</div>
                </div>
                <div class="stat-card">
                    <div class="stat-label">Risk Range</div>
                    <div class="stat-value" id="riskRange">-</div>
                </div>
            </div>
        </div>

        <div class="chart-container">
            <div class="chart-header">
                <div class="chart-title">Risk Score Over Time (-1 to +1)</div>
                <div class="chart-controls">
                    <button class="chart-btn" onclick="resetZoom()">ðŸ”„ Reset Zoom</button>
                    <button class="chart-btn" onclick="toggleAggregation()">ðŸ“Š Daily/Monthly</button>
                </div>
            </div>
            <div class="zoom-info" id="zoomInfo">Scroll to zoom â€¢ Drag to pan</div>
            <div class="chart-wrapper">
                <canvas id="riskChart"></canvas>
            </div>
            <div class="legend-custom">
                <div class="legend-item">
                    <div class="legend-color" style="background: #4ade80;"></div>
                    <span>Negative Risk (-1 to 0): Lower Volatility</span>
                </div>
                <div class="legend-item">
                    <div class="legend-color" style="background: #fbbf24;"></div>
                    <span>Near Zero: Moderate</span>
                </div>
                <div class="legend-item">
                    <div class="legend-color" style="background: #f87171;"></div>
                    <span>Positive Risk (0 to +1): Higher Volatility</span>
                </div>
            </div>
        </div>

        <div class="chart-container">
            <div class="chart-header">
                <div class="chart-title">Price Movement</div>
                <div class="chart-controls">
                    <button class="chart-btn" onclick="resetPriceZoom()">ðŸ”„ Reset Zoom</button>
                </div>
            </div>
            <div class="chart-wrapper">
                <canvas id="priceChart"></canvas>
            </div>
        </div>
    </div>

    <script>
        const API_BASE = 'http://localhost:8000/api';
        let riskChart, priceChart;
        let currentData = null;
        let selectedYears = 3;
        let isMonthlyView = true;

        // Initialize charts
        function initCharts() {
            const commonOptions = {
                responsive: true,
                maintainAspectRatio: false,
                interaction: {
                    intersect: false,
                    mode: 'index'
                },
                plugins: {
                    legend: {
                        display: false
                    },
                    tooltip: {
                        backgroundColor: 'rgba(255, 255, 255, 0.96)',
                        titleColor: '#1f2937',
                        bodyColor: '#1f2937',
                        borderColor: '#e5e7eb',
                        borderWidth: 1,
                        padding: 10,
                        titleFont: { size: 12, weight: '600' },
                        bodyFont: { size: 11 },
                        displayColors: false,
                        callbacks: {
                            label: function(context) {
                                let label = context.dataset.label || '';
                                if (label) {
                                    label += ': ';
                                }
                                if (context.parsed.y !== null) {
                                    if (context.chart.canvas.id === 'riskChart') {
                                        label += context.parsed.y.toFixed(4);
                                    } else {
                                        label += context.parsed.y.toFixed(2);
                                    }
                                }
                                return label;
                            }
                        }
                    },
                    zoom: {
                        zoom: {
                            wheel: {
                                enabled: true,
                                speed: 0.1
                            },
                            pinch: {
                                enabled: true
                            },
                            mode: 'x',
                            onZoomStart: function() {
                                document.getElementById('zoomInfo').classList.add('active');
                            },
                            onZoomComplete: function({ chart }) {
                                document.getElementById('zoomInfo').classList.add('active');
                                setTimeout(() => {
                                    document.getElementById('zoomInfo').classList.remove('active');
                                }, 2000);
                                
                                // Auto-switch to daily view when zoomed in
                                const xScale = chart.scales.x;
                                const range = xScale.max - xScale.min;
                                const days = range / (1000 * 60 * 60 * 24);
                                
                                if (days < 180 && isMonthlyView && currentData) {
                                    isMonthlyView = false;
                                    updateCharts(currentData.data, currentData.index_name);
                                }
                            }
                        },
                        pan: {
                            enabled: true,
                            mode: 'x'
                        },
                        limits: {
                            x: { min: 'original', max: 'original' },
                            y: { min: 'original', max: 'original' }
                        }
                    }
                },
                scales: {
                    x: {
                        type: 'time',
                        time: {
                            unit: 'month',
                            displayFormats: {
                                month: 'MMM yyyy',
                                day: 'dd MMM yyyy'
                            }
                        },
                        grid: {
                            display: true,
                            color: 'rgba(209, 213, 219, 0.3)',
                            drawBorder: false
                        },
                        ticks: {
                            color: '#6b7280',
                            font: { size: 10 },
                            maxRotation: 0,
                            minRotation: 0
                        }
                    },
                    y: {
                        grid: {
                            display: true,
                            color: 'rgba(209, 213, 219, 0.3)',
                            drawBorder: false
                        },
                        ticks: {
                            color: '#6b7280',
                            font: { size: 10 }
                        }
                    }
                }
            };

            // Risk Score Chart with -1 to +1 scale
            riskChart = new Chart(document.getElementById('riskChart'), {
                type: 'line',
                data: { datasets: [] },
                options: {
                    ...commonOptions,
                    scales: {
                        ...commonOptions.scales,
                        y: {
                            ...commonOptions.scales.y,
                            min: -1,
                            max: 1,
                            ticks: {
                                ...commonOptions.scales.y.ticks,
                                callback: function(value) {
                                    return value.toFixed(2);
                                },
                                stepSize: 0.2
                            }
                        }
                    },
                    plugins: {
                        ...commonOptions.plugins,
                        annotation: {
                            annotations: {
                                zeroLine: {
                                    type: 'line',
                                    yMin: 0,
                                    yMax: 0,
                                    borderColor: '#1f2937',
                                    borderWidth: 1.5,
                                    borderDash: [0]
                                }
                            }
                        }
                    }
                }
            });

            // Price Chart
            priceChart = new Chart(document.getElementById('priceChart'), {
                type: 'line',
                data: { datasets: [] },
                options: commonOptions
            });
        }

        // Load indices list
        async function loadIndices() {
            try {
                const response = await fetch(`${API_BASE}/indices`);
                const data = await response.json();
                
                const select = document.getElementById('indexSelect');
                select.innerHTML = '<option value="">-- Select an index --</option>';
                
                data.indices.forEach(index => {
                    select.innerHTML += `<option value="${index}">${index}</option>`;
                });
            } catch (error) {
                showError('Failed to load indices: ' + error.message);
            }
        }

        // Time period button handlers
        document.querySelectorAll('.time-period-btn').forEach(btn => {
            btn.addEventListener('click', function() {
                document.querySelectorAll('.time-period-btn').forEach(b => b.classList.remove('active'));
                this.classList.add('active');
                selectedYears = this.dataset.years === 'all' ? null : parseInt(this.dataset.years);
                
                if (currentData) {
                    loadRiskometer();
                }
            });
        });

        // Load riskometer data
        async function loadRiskometer() {
            const indexName = document.getElementById('indexSelect').value;
            const windowSize = document.getElementById('windowSize').value;

            if (!indexName) {
                showError('Please select an index');
                return;
            }

            hideError();

            try {
                let url = `${API_BASE}/riskometer/${encodeURIComponent(indexName)}?window=${windowSize}`;
                if (selectedYears) {
                    url += `&years=${selectedYears}`;
                }

                const response = await fetch(url);
                const riskData = await response.json();
                currentData = riskData;

                // Update stats
                if (riskData.data.length > 0) {
                    const latest = riskData.data[riskData.data.length - 1];
                    updateStats(latest, riskData);
                }

                // Aggregate data for initial monthly view
                isMonthlyView = true;
                const aggregatedData = aggregateToMonthly(riskData.data);
                updateCharts(aggregatedData, indexName);

            } catch (error) {
                showError('Failed to load data: ' + error.message);
            }
        }

        // Aggregate data to monthly
        function aggregateToMonthly(data) {
            if (data.length === 0) return [];

            const monthlyMap = new Map();
            
            data.forEach(point => {
                const date = new Date(point.date);
                const monthKey = `${date.getFullYear()}-${String(date.getMonth() + 1).padStart(2, '0')}`;
                
                if (!monthlyMap.has(monthKey)) {
                    monthlyMap.set(monthKey, {
                        dates: [],
                        prices: [],
                        riskScores: []
                    });
                }
                
                const monthData = monthlyMap.get(monthKey);
                monthData.dates.push(point.date);
                monthData.prices.push(point.price);
                monthData.riskScores.push(point.risk_score);
            });

            const result = [];
            monthlyMap.forEach((monthData, monthKey) => {
                // Use the first day of each month
                const firstDate = monthData.dates[0];
                const avgPrice = monthData.prices.reduce((a, b) => a + b, 0) / monthData.prices.length;
                const avgRisk = monthData.riskScores.reduce((a, b) => a + b, 0) / monthData.riskScores.length;
                
                result.push({
                    date: firstDate,
                    price: avgPrice,
                    risk_score: avgRisk
                });
            });

            return result.sort((a, b) => new Date(a.date) - new Date(b.date));
        }

        // Update stats panel
        function updateStats(latest, fullData) {
            document.getElementById('statsPanel').style.display = 'block';
            document.getElementById('currentPrice').textContent = latest.price.toFixed(2);
            
            const riskScore = latest.risk_score;
            document.getElementById('riskScore').textContent = riskScore.toFixed(4);
            
            const riskIndicator = document.getElementById('riskIndicator');
            if (riskScore < -0.3) {
                riskIndicator.textContent = 'Low Risk';
                riskIndicator.className = 'risk-indicator risk-negative';
            } else if (riskScore >= -0.3 && riskScore <= 0.3) {
                riskIndicator.textContent = 'Moderate';
                riskIndicator.className = 'risk-indicator risk-neutral';
            } else {
                riskIndicator.textContent = 'High Risk';
                riskIndicator.className = 'risk-indicator risk-positive';
            }
            
            document.getElementById('currentVolatility').textContent = (latest.volatility * 100).toFixed(4) + '%';
            
            const minRisk = Math.min(...fullData.data.map(d => d.risk_score));
            const maxRisk = Math.max(...fullData.data.map(d => d.risk_score));
            document.getElementById('riskRange').textContent = `${minRisk.toFixed(2)} to ${maxRisk.toFixed(2)}`;
        }

        // Update charts
        function updateCharts(data, indexName) {
            const dates = data.map(d => d.date);
            const riskScores = data.map(d => d.risk_score);
            const prices = data.map(d => d.price);

            // Update time unit based on view
            const timeUnit = isMonthlyView ? 'month' : 'day';
            riskChart.options.scales.x.time.unit = timeUnit;
            priceChart.options.scales.x.time.unit = timeUnit;

            riskChart.data.datasets = [{
                label: indexName + ' Risk Score',
                data: dates.map((date, i) => ({ x: date, y: riskScores[i] })),
                borderColor: '#3b82f6',
                backgroundColor: 'transparent',
                fill: false,
                tension: 0.3,
                borderWidth: 1.5,
                pointRadius: 0,
                pointHoverRadius: 4,
                pointHoverBackgroundColor: '#3b82f6',
                pointHoverBorderWidth: 2,
                pointHoverBorderColor: '#fff'
            }];
            riskChart.update('none');

            priceChart.data.datasets = [{
                label: indexName + ' Price',
                data: dates.map((date, i) => ({ x: date, y: prices[i] })),
                borderColor: '#3b82f6',
                backgroundColor: 'transparent',
                fill: false,
                tension: 0.3,
                borderWidth: 1.5,
                pointRadius: 0,
                pointHoverRadius: 4
            }];
            priceChart.update('none');

            // Show zoom info briefly
            document.getElementById('zoomInfo').classList.add('active');
            setTimeout(() => {
                document.getElementById('zoomInfo').classList.remove('active');
            }, 3000);
        }

        function createGradient(ctx) {
            const gradient = ctx.createLinearGradient(0, 0, 0, 400);
            gradient.addColorStop(0, 'rgba(248, 113, 113, 0.3)');
            gradient.addColorStop(0.5, 'rgba(251, 191, 36, 0.2)');
            gradient.addColorStop(1, 'rgba(74, 222, 128, 0.3)');
            return gradient;
        }

        function toggleAggregation() {
            if (!currentData) return;
            
            isMonthlyView = !isMonthlyView;
            const data = isMonthlyView ? aggregateToMonthly(currentData.data) : currentData.data;
            updateCharts(data, currentData.index_name);
        }

        function resetZoom() {
            riskChart.resetZoom();
            if (!isMonthlyView && currentData) {
                isMonthlyView = true;
                updateCharts(aggregateToMonthly(currentData.data), currentData.index_name);
            }
        }

        function resetPriceZoom() {
            priceChart.resetZoom();
        }

        function showError(message) {
            const errorDiv = document.getElementById('errorMessage');
            errorDiv.textContent = message;
            errorDiv.style.display = 'block';
        }

        function hideError() {
            document.getElementById('errorMessage').style.display = 'none';
        }

        // Initialize on page load
        window.addEventListener('load', async () => {
            initCharts();
            await loadIndices();
            // Auto-load first index to show data immediately
            const select = document.getElementById('indexSelect');
            if (select.options.length > 1) {
                select.selectedIndex = 1;
                loadRiskometer();
            }
        });

        // Enter key support
        document.getElementById('windowSize').addEventListener('keypress', (e) => {
            if (e.key === 'Enter') {
                loadRiskometer();
            }
        });
    </script>
</body>
</html>
